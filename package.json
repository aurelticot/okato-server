{
  "name": "okato-server",
  "version": "0.1.0",
  "description": "Stock Echange trading sessions - Server side of the okato project",
  "private": true,
  "main": "build/index.js",
  "scripts": {
    "clean:node_modules": "rm -rf node_modules/",
    "clean:build": "rm -rf build/",
    "clean": "npm run clean:build && npm run clean:node_modules",
    "format:check": "npx prettier src/ --check",
    "format": "npx prettier src/ --write",
    "lint:check": "eslint src/",
    "lint": "eslint src/ --fix",
    "check": "npm run format:check && npm run lint:check",
    "fix": "npm run format && npm run lint",
    "prebuild": "npm run clean:build",
    "build": "npm run check && tsc -p ./",
    "test": "echo \"No test specified yet\" && exit 0",
    "start:dev": "nodemon --watch src --ext ts,js,json --exec 'ts-node -r dotenv/config --files src/index.ts'",
    "start:build": "node -r dotenv/config build/index.js",
    "start": "node build/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aurelticot/okato-server.git"
  },
  "keywords": [
    "stock-market"
  ],
  "author": "aurelticot",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aurelticot/okato-server/issues"
  },
  "homepage": "https://github.com/aurelticot/okato-server#readme",
  "dependencies": {
    "apollo-server-express": "^2.18.1",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "graphql": "^15.3.0",
    "helmet": "^4.1.1",
    "lodash.merge": "^4.6.2",
    "luxon": "^1.25.0",
    "nanoid": "^3.1.12",
    "on-headers": "^1.0.2",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.7",
    "@types/helmet": "0.0.48",
    "@types/lodash.merge": "^4.6.6",
    "@types/luxon": "^1.25.0",
    "@types/nanoid": "^2.1.0",
    "@types/node": "^14.11.2",
    "@types/on-headers": "^1.0.0",
    "@typescript-eslint/eslint-plugin": "^4.3.0",
    "@typescript-eslint/parser": "^4.3.0",
    "dotenv": "^8.2.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-plugin-functional": "^3.0.2",
    "eslint-plugin-jsdoc": "^30.6.3",
    "eslint-plugin-no-loops": "^0.3.0",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-promise": "^4.2.1",
    "nodemon": "^2.0.4",
    "prettier": "^2.1.2",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "engines": {
    "node": "14.13.0"
  }
}
